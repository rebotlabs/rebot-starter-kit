{
    "semi": false,
    "singleQuote": false,
    "singleAttributePerLine": false,
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 150,
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "tailwindFunctions": ["clsx", "cn"],
    "tabWidth": 2,
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
            "options": {
                "semi": false,
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}
